    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "examples",
            "program": "${workspaceFolder}/bin/doctools.js",
            "args": [
                "${workspaceFolder}/examples"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "webpack plugin",
            "program": "${workspaceFolder}/node_modules/.bin/webpack",
            "cwd": "${workspaceFolder}/examples",
            "args": [
                "${workspaceFolder}/examples"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "webpack plugin (watch)",
            "program": "${workspaceFolder}/node_modules/.bin/webpack",
            "cwd": "${workspaceFolder}/examples",
            "args": [
                "${workspaceFolder}/examples",
                "-w"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "jasmine",
            "program": "${workspaceFolder}/node_modules/.bin/jasmine",
            "args": [
                "test/**/*.spec.js",
                "--dev"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "uikit-utils",
            "program": "${workspaceFolder}/bin/doctools.js",
            "args": [
                "/Users/jms/uikit-utils",
                "--dev"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "uikit (server)",
            "program": "${workspaceFolder}/bin/doctools.js",
            "args": [
                "/Users/jms/uikit",
                "--dev",
                "--server"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "examples (watch)",
            "program": "${workspaceFolder}/bin/doctools.js",
            "args": [
                "${workspaceFolder}/examples",
                "--dev"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "examples (explain)",
            "program": "${workspaceFolder}/bin/doctools.js",
            "args": [
                "${workspaceFolder}/examples",
                "--explain",
                "--dev"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "examples (dev-server)",
            "program": "${workspaceFolder}/bin/doctools.js",
            "args": [
                "${workspaceFolder}/examples",
                "--dev",
                "--server"
            ]
        }
    ]
}